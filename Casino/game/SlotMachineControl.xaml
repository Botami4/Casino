<UserControl x:Class="Casino.game.SlotMachineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Casino.game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Félkarú rabló" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,0,16"/>
        <Border Grid.Row="1" CornerRadius="20" Background="#0b1220" Padding="20" BorderBrush="#374141" BorderThickness="2"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Border CornerRadius="12" Background="#111827" Padding="12" BorderBrush="#4b5563" BorderThickness="1">
            <Grid x:Name="ReelGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border CornerRadius="8" Background="#0F172A" Margin="6" Grid.Column="1">
                    <Viewbox Stretch="Fill">
                        <Canvas x:Name="Reel1" Width="220" Height="180" ClipToBounds="True"/>
                    </Viewbox>
                </Border>
                <Border CornerRadius="8" Background="#0F172A" Margin="6" Grid.Column="2">
                    <Viewbox Stretch="Fill">
                        <Canvas x:Name="Reel2" Width="220" Height="180" ClipToBounds="True"/>
                    </Viewbox>
                </Border>
                <Border CornerRadius="8" Background="#0F172A" Margin="6" Grid.Column="3">
                    <Viewbox Stretch="Fill">
                        <Canvas x:Name="Reel3" Width="220" Height="180" ClipToBounds="True"/>
                    </Viewbox>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
